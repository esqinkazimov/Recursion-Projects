    "def factorial(num):\n",
    "    \"\"\"\n",
    "    This is a recursive function to find the factorial of a given number\n",
    "    \"\"\"\n",
    "    return 1 if num == 1 else (num * factorial(num-1))\n",
    "\n",
    "num = int(input('Please enter a number: '))\n",
    "print (\"Factorial of {0} is {1}\".format(num, factorial(num)))"
   ]
